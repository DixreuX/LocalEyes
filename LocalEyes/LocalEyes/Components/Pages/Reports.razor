@page "/reports"

@using LocalEyes.Shared.Models
@using Microsoft.AspNetCore.Components.Authorization

@inject LocalEyes.Services.ReportService ReportService
@inject IJSRuntime JSRuntime
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthenticationStateProvider

@rendermode InteractiveServer

<PageTitle>Reports</PageTitle>

<script>

    function initializeLeafletMap(mapId, latitude, longitude) {

    const map = L.map(mapId).setView([parseFloat(latitude), parseFloat(longitude)], 13);

    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
    maxZoom: 19
    }).addTo(map);

    L.marker([parseFloat(latitude), parseFloat(longitude)]).addTo(map);
    }

</script>

<h1>Reports</h1>
<br />
<br />

<row>

    <div class="col-md-12" style="text-align: end">
        <button class="btn btn-primary" @onclick="() => CreateReport()">New report</button>
    </div>

</row>

@if (reports == null)
{
    <p>Loading...</p>
}
else if (reports.Count == 0)
{
    <p>No reports available.</p>
}
else
{
    <table class="table">

        <thead>

            <tr>
                <th>Description</th>
                <th>Type</th>
                <th>Created Date</th>
                <th class="actions-column"></th>
            </tr>

        </thead>

        <tbody>

            @foreach (var report in reports)
            {
                <tr class="@(expandedRows.ContainsKey(report.Id) && expandedRows[report.Id] ? "expanded-parent" : "")">

                    <td><strong>@report.Comment</strong></td>
                    <td><strong>@report.Type?.Name</strong></td>
                    <td>@report.CreatedDate.ToShortDateString()</td>

                    <td class="actions-column">

                        <button class="btn btn-primary table-action-btn ms-1" @onclick="() => ToggleMap(report.Id)">
                            <i class="fas fa-map-location-dot" aria-hidden="true"></i>
                        </button>

                        @if (IsAdmin)
                        {
                            <button class="btn btn-primary table-action-btn ms-1" @onclick="() => EditReport(report.Id)">
                                <i class="fas fa-pencil" aria-hidden="true"></i>
                            </button>

                            <button class="btn btn-danger table-action-btn ms-1" @onclick="() => DeleteReport(report.Id)">
                                <i class="fas fa-trash" aria-hidden="true"></i>
                            </button>
                        }

                    </td>

                </tr>

                @if (expandedRows.ContainsKey(report.Id) && expandedRows[report.Id])
                {
                    <tr class="expanded-row">

                        <td colspan="6">

                            <div>
                                <strong>Latitude:</strong> @report.Latitude
                                <br />
                                <strong>Longitude:</strong> @report.Longitude
                                <div id="map-@report.Id" style="height: 400px; width: 100%; margin-top: 10px;"></div>

                                <table class="table comments-table" style="margin-top: 20px;">

                                    <thead>

                                        <tr>
                                            <th>Comment</th>
                                            <th>Username</th>
                                            <th></th>
                                        </tr>

                                    </thead>

                                    <tbody>

                                        <tr>
                                            <td width="91%">This is a placeholder comment</td>

                                            <td class="actions-column">

                                                @if (IsAdmin)
                                                {
                                                    <button class="btn btn-primary table-action-btn ms-1" @onclick="() => EditComment(report.Id)">
                                                        <i class="fas fa-pencil" aria-hidden="true"></i>

                                                    </button>
                                                    <button class="btn btn-danger table-action-btn ms-1" @onclick="() => DeleteComment(report.Id)">
                                                        <i class="fas fa-trash" aria-hidden="true"></i>
                                                    </button>
                                                }

                                            </td>

                                        </tr>

                                        <tr>
                                            <td width="91%">

                                                <input class="form-control" placeholder="Add a comment..." />

                                               


                                            </td>

                                            <td width="20%" class="actions-column">

                                                <button class="btn btn-primary table-action-btn ms-1" @onclick="() => CreateComment()">
                                                    <i class="fas fa-comment-medical" aria-hidden="true"></i>
                                                </button>

                                            </td>

                                        </tr>



                                    </tbody>

                                </table>

                            </div>

                        </td>

                    </tr>


                }
            }
        </tbody>
    </table>
}

@if (showDeleteConfirmation)
{
    <div class="modal-overlay">

        <div class="modal-box">

            <h3>Confirm Deletion</h3>

            <p>Are you sure you want to delete this report?</p>

            <div class="modal-actions">

                <button class="btn btn-danger" @onclick="ConfirmDelete">Confirm</button>
                <button class="btn btn-primary" @onclick="CancelDelete">Cancel</button>

            </div>

        </div>

    </div>
}

@code {

    private List<Report> reports;

    private bool IsAdmin = false;
    private bool showDeleteConfirmation = false;
    private Guid reportToDelete;

    private Dictionary<Guid, bool> expandedRows = new();
    private Dictionary<Guid, List<Comment>> reportComments = new();
    private Dictionary<Guid, string> newCommentTexts = new();
    private Dictionary<Guid, bool> isLoadingComments = new();

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();

        var user = authState.User;

        IsAdmin = user.Identity?.IsAuthenticated == true && user.IsInRole("Administrator");

        try
        {
            reports = await ReportService.GetReportsAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error fetching reports: {ex.Message}");
        }
    }


    private async Task ToggleMap(Guid reportId)
    {
        if (expandedRows.ContainsKey(reportId))
        {
            expandedRows[reportId] = !expandedRows[reportId];
        }
        else
        {
            expandedRows[reportId] = true;
        }

        await Task.Delay(50);

        if (expandedRows[reportId])
        {
            await InitializeMapAsync(reportId);
            await LoadCommentsAsync(reportId);
        }
    }

    private async Task InitializeMapAsync(Guid reportId)
    {
        var report = reports.FirstOrDefault(r => r.Id == reportId);

        if (report != null)
        {
            await JSRuntime.InvokeVoidAsync("initializeLeafletMap", $"map-{report.Id}", report.Latitude, report.Longitude);
        }
    }

    private async Task LoadCommentsAsync(Guid reportId)
    {
        isLoadingComments[reportId] = true;

        try
        {
            var comments = await ReportService.GetCommentsForReportAsync(reportId);

            reportComments[reportId] = comments;
        }
        catch
        {
            reportComments[reportId] = new List<Comment>();
        }
        finally
        {
            isLoadingComments[reportId] = false;

            StateHasChanged();
        }
    }

    private async Task AddCommentAsync(Guid reportId)
    {
        var text = newCommentTexts.ContainsKey(reportId) ? newCommentTexts[reportId] : string.Empty;

        if (string.IsNullOrWhiteSpace(text))
        {
            return;
        }

        var username = "Anonymous";

        var comment = new Comment
        {
            Username = username,
            UserComment = text
        };

        await ReportService.AddCommentToReportAsync(reportId, comment);

        newCommentTexts[reportId] = string.Empty;

        await LoadCommentsAsync(reportId);
    }

    private void CreateReport()
    {
        Navigation.NavigateTo("/createreport");
    }

    private void EditReport(Guid reportId)
    {
        Navigation.NavigateTo($"/editreport/{reportId}");
    }

    private void DeleteReport(Guid reportId)
    {
        reportToDelete = reportId;
        showDeleteConfirmation = true;
    }

    private async Task ConfirmDelete()
    {
        try
        {
            await ReportService.DeleteReport(reportToDelete);

            reports = reports.Where(r => r.Id != reportToDelete).ToList();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error deleting report: {ex.Message}");
        }
        finally
        {
            showDeleteConfirmation = false;
        }
    }

    private void CancelDelete()
    {
        showDeleteConfirmation = false;
    }

    private void CreateComment()
    {
        Navigation.NavigateTo("/editreport");
    }

    private void EditComment(Guid reportId)
    {
        Navigation.NavigateTo($"/editreport/{reportId}");
    }

    private void DeleteComment(Guid reportId)
    {
        reportToDelete = reportId;
        showDeleteConfirmation = true;
    }
}

